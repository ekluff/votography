<p id="notice"><%= notice %></p>

<h1>Votography</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="questions_table">
    <% @questions.each do |question| %>
      <tr>
        <td>
          <%= question.text %>
        </td>
      </tr>
      <tr>
        <td>
          <%= question.answer_one %>
        </td>
        <td>
          <%= button_to "this one!", {action: 'update', id: question.id}, {method: :patch, remote: true, params: {"question[votes_one]": 1}} %>
        </td>
        <td>
          <%= question.votes_one %>
        </td>
      </tr>
      <tr>
        <td>
          <%= question.answer_two %>
        </td>
        <td>
          <%= button_to "that one!", {action: 'update', id: question.id}, {method: :patch, remote: true, params: {"question[votes_two]": 1}} %>
        </td>
        <td>
          <%= question.votes_one %>
        </td>
      </tr>
      <tr>
        <td><%= link_to 'Show', question %> |
        <%= link_to 'Edit', edit_question_path(question), remote: true %> |
        <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

